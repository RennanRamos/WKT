<!-- src/main/resources/db/changelog/V1__create_table.xml -->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="createTable" author="rennan" >
        <createTable tableName="Donator">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="nome" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="cpf" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="rg" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="data_nasc" type="varchar(12)">
                <constraints nullable="false"/>
            </column>
            <column name="sexo" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="mae" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="pai" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="cep" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="endereco" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="numero" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="bairro" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="cidade" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="estado" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="telefone_fixo" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="celular" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="altura" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="peso" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="tipo_sanguineo" type="varchar(3)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>